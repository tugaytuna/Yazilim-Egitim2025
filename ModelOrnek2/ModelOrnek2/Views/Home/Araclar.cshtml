@{
}




<h1>Araçlar</h1>

@foreach (Arac arc in Model)
{
    <div class="aracCard">
        <img height="400" src="@arc.GorselUrl" />
        <div class="arac-info">
            <label>Araç ID: @arc.AracId</label>
            <div class="Marka-model">
                <label>@arc.Marka</label>
                <label>@arc.Model</label>
            </div>
            <label>@arc.Yil</label>
            <div class="arac-ozellik">
                <label class="vites">@arc.Vites</label>
                <br />
                <label class="ucret">Günlük Kiralama Ücreti: @arc.GunlukKira TL</label>
                <br />
                <label class="kilometre">Kilometre: @arc.Kilometre km</label>
                <br />
            </div>
            <label>Kiralamaya uygun mu? @arc.Hazir</label>
        </div>
    </div>

}



